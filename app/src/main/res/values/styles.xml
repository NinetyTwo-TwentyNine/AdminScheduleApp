<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditText">
        <item name="android:layout_width">385dp</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColorHint">#63656B</item>
        <item name="android:paddingBottom">19dp</item>
        <item name="android:paddingTop">19dp</item>
        <item name="android:paddingStart">13dp</item>
        <item name="android:background">@drawable/border_edit_text</item>
    </style>

    <style name="EditTextInSchedule">
        <item name="android:layout_width">385dp</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:textColor">#8B8D92</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColorHint">#FFFFFF</item>
        <item name="android:paddingBottom">19dp</item>
        <item name="android:paddingTop">19dp</item>
        <item name="android:paddingStart">13dp</item>
        <item name="android:backgroundTint">#5265CE</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="MainText">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">39dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextSchedule">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="ClickableText">
        <item name="android:textColor">#5265CE</item>
        <item name="android:clickable">true</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="Button" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">385dp</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">@drawable/border_button</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>