<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="390dp"
        android:layout_height="344dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="9dp"
        app:cardBackgroundColor="#292B30"
        app:cardCornerRadius="13dp">

        <EditText
            android:id="@+id/teacherSecond"
            style="@style/EditTextInSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="*Преподаватель 2" />

        <EditText
            android:id="@+id/teacherThird"
            style="@style/EditTextInSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:inputType="textPersonName"
            android:text="*Преподаватель 3" />

        <EditText
            android:id="@+id/cabinetSecond"
            style="@style/EditTextInSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:inputType="textPersonName"
            android:text="*Кабинет 2" />

        <EditText
            android:id="@+id/cabinetThird"
            style="@style/EditTextInSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="195dp"
            android:inputType="textPersonName"
            android:text="*Кабинет 3" />

        <EditText
            android:id="@+id/subgroup"
            style="@style/EditTextInSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="260dp"
            android:inputType="textPersonName"
            android:text="*Подгруппа" />

    </androidx.cardview.widget.CardView>


</RelativeLayout>